<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="335dp"
        android:layout_height="438dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:id="@+id/TR1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/Btn_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#CA1414"
                android:text="7"
                android:onClick="onClick7"
                android:textSize="34sp" />

            <Button
                android:id="@+id/Btn_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#CA1414"
                android:text="8"
                android:textSize="34sp" />

            <Button
                android:id="@+id/Btn_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#CA1414"
                android:text="9"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/Btn_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#CA1414"
                android:text="4"
                android:textSize="34sp" />

            <Button
                android:id="@+id/Btn_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#CA1414"
                android:text="5"
                android:textSize="34sp" />

            <Button
                android:id="@+id/Btn_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#CA1414"
                android:text="6"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/Btn_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#CA1414"
                android:text="1"
                android:textSize="34sp" />

            <Button
                android:id="@+id/Btn_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#CA1414"
                android:text="2"
                android:textSize="34sp" />

            <Button
                android:id="@+id/Btn_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#CA1414"
                android:text="3"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/Btn_Suma"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#CA1414"
                android:text="+"
                android:textSize="34sp"
                app:strokeColor="#FFEB3B" />

            <Button
                android:id="@+id/Btn_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#CA1414"
                android:text="0"
                android:textSize="34sp" />

            <Button
                android:id="@+id/Btn_Resta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:backgroundTint="#CA1414"
                android:textSize="34sp"
                app:strokeColor="#FFEB3B" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/Btn_Multiplicacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#CA1414"
                android:text="*"
                android:textSize="34sp"
                app:strokeColor="#FFEB3B" />

            <Button
                android:id="@+id/Btn_Division"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#CA1414"
                android:text="/"
                android:textSize="34sp"
                app:strokeColor="#FFEB3B" />

            <Button
                android:id="@+id/Btn_Igual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#CA1414"
                android:text="="
                android:textSize="34sp"
                app:strokeColor="#F40000" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/Btn_Clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#CA1414"

                android:text="Clear"
                android:textSize="34sp"
                app:strokeColor="#00BCD4" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/txvResultado"
        android:layout_width="327dp"
        android:layout_height="87dp"
        android:layout_marginTop="64dp"
        android:background="#FAE8E7"
        android:text="123456"
        android:textColor="#000000"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
